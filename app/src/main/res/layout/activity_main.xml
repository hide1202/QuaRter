<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="resultText"
            type="CharSequence" />

        <variable
            name="urlMetadata"
            type="io.viewpoint.quarter.model.UrlMetadata" />

        <variable
            name="windowInsetsTop"
            type="int" />

        <variable
            name="windowInsetsBottom"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@{windowInsetsTop}"
            tools:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@{windowInsetsBottom}"
            tools:layout_constraintGuide_end="30dp" />

        <androidx.camera.view.PreviewView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:alpha="0.6"
            android:background="@drawable/bg_guide_message"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:paddingVertical="16dp"
            android:text="@string/guide_message"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="13sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_guideline" />

        <ImageView
            android:id="@+id/recognize_qr_code"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/result_container"
            app:layout_constraintEnd_toEndOf="@id/result_container" />

        <include
            android:id="@+id/result_container"
            layout="@layout/layout_scan_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:gone="@{resultText == null || resultText.length() == 0}"
            app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:resultText="@{resultText}"
            app:urlMetadata="@{urlMetadata}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>